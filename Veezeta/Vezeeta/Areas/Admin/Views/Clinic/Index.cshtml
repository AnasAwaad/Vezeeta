@model IEnumerable<ClinicFormViewModel>

@{
	ViewData["Title"] = "Clinics";
}


<section class="content-header">
	<div class="container-fluid">
		<div class="row mb-2">
			<div class="col-sm-6">
				<h1>Clinics</h1>
			</div>
			<div class="col-sm-6">
				<ol class="breadcrumb float-sm-right">
					<li class="breadcrumb-item"><a asp-area="Admin" asp-controller="Home" asp-action="Index">Home</a></li>
					<li class="breadcrumb-item active">Clinics</li>
				</ol>
			</div>
		</div>
	</div>
</section>

<!-- Main content -->
<section class="content">

	<!-- Default box -->
	<div class="card card-solid pb-2">
		<div class="card-header row border-0">
			<div class="col-sm-12 d-flex justify-content-end">
				<a class="btn btn-md btn-primary js-render-modal" data-url="Clinic/Create" data-title="Create Clinic">
					<i class="fas fa-pen"></i> Create
				</a>
			</div>
		</div>

		@if (!Model.Any())
		{
			<div class="alert alert-warning alert-dismissible m-3">
				<button type="button" class="close" data-dismiss="alert" aria-hidden="true">×</button>
				<h5><i class="icon fas fa-exclamation-triangle"></i> Warning!</h5>
				No Clinics Available
			</div>
		}
		else
		{
			<div class="card-body pb-0">
                <div class="table-responsive p-0">
                    <table class="table table-hover text-nowrap js-dataTable">
                        <thead>
                            <tr>
                                <th>Name</th>
                                <th>Location</th>
                                <th>Status</th>
                                <th>Last Updated Time</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody id="ClinicRows">
                            @foreach (var clinic in Model)
							{
								<partial name="_ClinicRow" model="clinic" />
							}
                            
                        </tbody>
                    </table>
                </div>
			</div>

		}

	</div>


</section>
<!-- /.content -->

@section Scripts{
	<partial name="_ValidationScriptsPartial"/>
}