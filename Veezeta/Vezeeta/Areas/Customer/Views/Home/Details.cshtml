@model Doctor

<div class="container mt-5">
    <div class="row">
        <div class="col-md-5">
            @if (Model is not null)
            {
                var doctor = Model;
                <div class="card text-center shadow-lg p-3 mb-5 bg-white rounded">
                    <img src="~/@Model.ImagePath" class="img-fluid rounded-circle mx-auto d-block mt-3" style="width: 150px; height: 150px; object-fit: cover; object-position: top;" alt="Doctor Image">
                    <div class="card-body">
                        <h4 class="card-title text-primary mb-2">Dr. @doctor.FirstName</h4>
                        <p class="card-text mb-1">
                            <strong>Specialty:</strong> <span class="text-muted">@doctor.Specialized?.ToString()</span>
                        </p>
                        <p class="card-text">
                            <strong>Description:</strong> <span class="text-muted">@doctor.About</span>
                        </p>
                    </div>
                </div>
            }
            else
            {
                <div class="alert alert-danger">Doctor not found</div>
            }
        </div>

        <div class="col-md-7">
            <div class="card shadow-sm p-3 mb-5 bg-white rounded">
                <div class="card-body">
                    <h5 class="card-title text-center text-dark mb-3">Available Time Slots</h5>
                    <div class="table-responsive">
                        <table class="table table-striped table-bordered text-center">
                            <thead class="table-dark">
                                <tr>
                                    <th>Date</th>
                                    <th>Action</th>
                                </tr>
                            </thead>
                            <tbody>
                                @if (Model?.TimeSlots?.Any() == true)
                                {
                                    @foreach (var slot in Model.TimeSlots)
                                    {
                                        <tr>
                                            <td>
                                                @{
                                                    DateTime parsedDate;
                                                    if (DateTime.TryParse(slot.Date.ToString(), out parsedDate))
                                                    {
                                                        @parsedDate.ToString("hh:mm tt / dd-MM-yyyy")
                                                    }
                                                    else
                                                    {
                                                        <span class="text-danger">Invalid Date</span>
                                                    }
                                                }
                                            </td>
                                            <td>
                                                @if (!slot.IsDeleted)
                                                {
                                                    <button class="btn btn-sm btn-success">Book</button>
                                                }
                                                else
                                                {
                                                    <span class="badge bg-danger">Invalid</span>
                                                }
                                            </td>
                                        </tr>
                                    }
                                }
                                else
                                {
                                    <tr>
                                        <td colspan="2" class="text-danger">No available slots</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
