@model List<TimeSlot>

<div class="container mt-4">
	<div class="row">
		<div class="col-md-6">
			@if (Model.Any())
			{
				var doctor = Model.First().Doctor;
				<div class="card shadow-sm p-3 mb-4 bg-body rounded">
					<img src="@(string.IsNullOrEmpty(doctor.ImageUrl) ? Url.Content("~/images/Doctor/doctor.svg") : doctor.ImageUrl)"
						 class="card-img-top" alt="Doctor Image">
					<div class="card-body">
						<h5 class="card-title">Dr. @doctor.Name</h5>
						<p class="card-text"><strong>Specialty:</strong> @doctor.</p>
						<p class="card-text"><strong>Price:</strong> $@doctor.Price</p>
						<p class="card-text"><strong>Description:</strong> @doctor.Description</p>
					</div>
				</div>
			}
			else
			{
				<h5 class="card-title text-danger">Doctor not found</h5>
			}
		</div>

		<div class="col-md-6">
			<div class="table-responsive">
				<table class="table table-bordered table-hover text-center">
					<thead class="table-dark">
						<tr>
							<th>Date</th>
							<th>Action</th>
						</tr>
					</thead>
					<tbody>
						@if (Model.Any())
						{
							@foreach (var slot in Model)
							{
								<tr>
									<td>
										@{
											DateTime parsedDate;
											if (DateTime.TryParse(slot.Date, out parsedDate))
											{
												@parsedDate.ToString("hh:mm tt / dd-MM-yyyy")
											}
											else
											{
												<span class="text-danger">Invalid Date</span>
											}
										}
									</td>
									<td>
										@if (slot.Avaiable == true)
										{
											<button class="btn btn-primary">Book</button>
										}
										else
										{
											<span class="text-danger">Invalid</span>
										}
									</td>
								</tr>
							}
						}
						else
						{
							<tr>
								<td colspan="2" class="text-danger">No available slots</td>
							</tr>
						}
					</tbody>
				</table>
			</div>
		</div>
	</div>
</div>
