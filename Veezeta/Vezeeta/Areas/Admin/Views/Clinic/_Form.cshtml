@model ClinicFormViewModel

<form class="content" id="ClinicForm">
    @if (Model?.Id != 0)
    {
        <input asp-for="Id" type="hidden" />
    }

    <div class="form-group">
        <label asp-for="Name" ></label>
        <input asp-for="Name" class="form-control" id="ClinicName">
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Location"></label>
        <input asp-for="Location" class="form-control" id="ClinicLocation">
        <span asp-validation-for="Location" class="text-danger"></span>
    </div>

    <div class="row">
        <div class="col-12">
            <button type="button" class="btn btn-danger" data-dismiss="modal">Cancel</button>
            <button type="button" class="btn btn-primary float-right" onclick="SaveClinic()">Save</button>
        </div>
    </div>
</form>
